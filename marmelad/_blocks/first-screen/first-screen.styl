.first-screen
  height: 100%
  color: #fff

  &__section
    height: 850px
    position: relative
    padding-top: 10px
    padding-bottom: 155px
    overflow: hidden
    // background-attachment: fixed
    background-position: 50% 50%
    background-repeat: no-repeat
    background-size: cover

    @media (max-width: 767px)
      height: 100%
      padding-top: 0
      padding-bottom: 30px
      

    @media (max-width: 639px)    
      background-position: 59.7% 50%
      
    .bg-left-pic
      position: absolute
      top: 0
      left: 0
      background-image: url('../img/first-screen-left-bg.png')
      background-repeat: no-repeat
      width: 246px
      height: 475px
      z-index: 2

      @media (max-width: 1599px)
        left: -100px

      @media (max-width: 1360px)
        left: -150px

      @media (max-width: 1279px)
        display: none

    .bg-right-pic
      position: absolute
      bottom: 0
      right: 0
      background-image: url('../img/first-screen-right-bg.png')
      background-repeat: no-repeat
      width: 310px
      height: 265px
      z-index: 2

      @media (max-width: 1360px)
        bottom: -100px

      @media (max-width: 639px)
        bottom: -140px

    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 8.71%, rgba(0, 0, 0, 0) 29.63%), linear-gradient(90deg, rgba(0, 0, 0, 0.79) 0%, rgba(27, 27, 27, 0.79) 37.71%, rgba(45, 45, 45, 0) 89.9%)
      z-index: 1

      @media (max-width: 959px)
        background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 8.71%, rgba(0, 0, 0, 0) 29.63%), linear-gradient(90deg, rgba(0, 0, 0, 0.79) 0%, rgba(27, 27, 27, 0.79) 60.71%, rgba(45, 45, 45, 0) 160.9%)

      @media (max-width: 639px)  
        background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 8.71%, rgba(0, 0, 0, 0) 29.63%), linear-gradient(90deg, rgba(0, 0, 0, 0.79) 0%, rgba(27, 27, 27, 0.79) 100%, rgba(45, 45, 45, 0) 160.9%)
  &__inner
    position: relative
    z-index: 3

  &__content
    max-width: 850px
    margin-top: 10px

    @media (max-width: 767px)
      margin-top: 0

  &__title
    font-size: 40px
    font-weight: 400
    line-height: 1.3
    margin-bottom: 20px

    @media (max-width: 767px)
      font-size: 25px
      margin-bottom: 15px

    span
      font-weight: 700
      color: #ff9f2e

  &__desc
    font-size: 25px
    font-weight: 400
    line-height: 1.3
    max-width: 680px
    margin-bottom: 35px

    @media (max-width: 767px)
      font-size: 18px
      margin-bottom: 25px

  &__list
    max-width: 700px
    display: flex
    justify-content: space-between
    list-style: none
    padding-left: 0
    margin: 30px 0

    @media (max-width: 767px)
      margin-top: 25px
      margin-bottom: 30px

    @media (max-width: 639px)
      display: block

    li
      font-size: 18px
      font-weight: 400
      line-height: 1.3
      display: flex
      align-items: center
      margin-right: 15px

      @media (max-width: 767px)
        font-size: 16px

      @media (max-width: 639px)
        font-size: 16px
        margin-right: 0
        margin-bottom: 20px

      &:last-child
        margin-right: 0
        margin-bottom: 0

      &:before
        content: ''
        flex: 0 0 40px
        width: 40px
        max-width: 40px
        height: 40px
        background-color: #72C30B
        background-image: url("data:image/svg+xml,%3Csvg width='12' height='9' viewBox='0 0 12 9' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5.43192 8.58952C4.88786 9.13683 4.00508 9.13683 3.46128 8.58952L0.408044 5.51802C-0.136015 4.97097 -0.136015 4.08291 0.408044 3.53587C0.951839 2.98855 1.83462 2.98855 2.37868 3.53587L4.19781 5.36561C4.33513 5.50349 4.55806 5.50349 4.69565 5.36561L9.62132 0.410484C10.1651 -0.136828 11.0479 -0.136828 11.592 0.410484C11.8532 0.673309 12 1.02991 12 1.40156C12 1.77322 11.8532 2.12981 11.592 2.39264L5.43192 8.58952Z' fill='white'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 50% 50%
        background-size: 12px 9px
        border-radius: 50%
        overflow: hidden
        margin-right: 20px

      br
        @media (max-width: 639px)
          display: none

  &__form-title
    font-size: 20px
    font-weight: 400
    line-height: 1.3
    margin-bottom: 20px

    @media (max-width: 767px)
      text-align: center

  &__form-section
    max-width: 720px
    width: 100%

    @media (min-width: 768px)
      display: flex
      align-items: center
      background-color: #FFF
      border-radius: 100px
      padding: 10px

  &__field
    max-width: 320px

    @media (max-width: 767px)
      max-width: 100%
      margin-bottom: 20px

    input
      font-size: 18px
      color: #000
      font-weight: 400
      line-height: 1.1
      border: none
      background-color: #FFF
      border-radius: 100px
      padding: 15px 30px
      height: 70px
      width: 100%

    ::placeholder
      font-size: 18px
      color: #000
      font-weight: 400
      line-height: 1.1

  &__button-submit
    width: 370px
    margin-left: auto

    @media (max-width: 767px)
      width: 100%
      margin-left: 0