.site-info
  padding-top: 30px
  padding-bottom: 30px

  &__section
    display: flex
    align-items: center

    @media (max-width: 1279px)
      flex-wrap: wrap
      justify-content: center

    @media (max-width: 767px)
      flex-direction: column

  &__button-whats-app
    background-color: rgba(255, 255, 255, 0.2)
    background-image: none
    box-shadow: none
    border: 1px solid #C9C9C9
    flex: 0 0 480px
    width: 480px
    max-width: 480px
    margin-right: 30px

    @media (max-width: 767px)
      flex: none
      order: 1
      margin-right: 0
      max-width: 320px
      width: 100%
      margin-left: auto
      margin-right: auto
      padding-top: 16px
      padding-bottom: 16px

    @media (max-width: 359px)
      font-size: 14px
      padding-right: 20px
      padding-left: 20px

    .svg-icon
      flex: 0 0 30px
      width: 30px
      max-width: 30px
      color: #72c30b

    span
      @media (max-width: 767px)
        text-align: center

  &__contacts
    text-align: right
    display: flex
    flex-direction: column

    @media (max-width: 767px)
      text-align: center
      margin-bottom: 20px

  &__phone
    font-size: 22px
    color: #FFF
    font-weight: 700
    line-height: 1.1
    text-align: right
    text-decoration: none
    margin-bottom: 5px

  &__request-call
    font-size: 18px
    color: #FF9F2E
    font-weight: 700
    line-height: 1.1
    text-decoration: none
