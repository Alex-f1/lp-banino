.advantages-product
  padding-top: 20px
  padding-bottom: 20px

  @media (max-width: 767px)
    padding-top: 25px
    padding-bottom: 25px

  &__head
    color: #000
    max-width: 780px
    width: 100%
    text-align: center
    margin-left: auto
    margin-right: auto
    margin-bottom: 40px

    @media (max-width: 767px)
      margin-bottom: 25px

  &__title
    font-size: 35px
    font-weight: 700
    line-height: 1.2
    margin-bottom: 20px

    @media (max-width: 767px)
      font-size: 22px
      margin-bottom: 15px

  &__desc
    font-size: 22px
    font-weight: 400
    line-height: 1.3
    margin-left: auto
    margin-right: auto

    @media (max-width: 767px)
      font-size: 18px

  &__container
    .swiper-wrapper
      @media (max-width: 959px)
        padding-bottom: 65px

    .swiper-pagination
      @media (min-width: 960px)
        display: none !important

  &__items
    @media (min-width: 960px)
      margin-left: -30px

  &__item
    width: 34.2%
    display: flex
    height: auto

    @media (min-width: 960px)
      padding-left: 30px

  &__body
    display: flex
    flex-direction: column
    border: 1px solid #FFF
    padding: 10px
    border-radius: 30px
    overflow: hidden
    background-color: rgba(255, 255, 255, 0.6)
    position: relative

  &__content
    background-color: #fff
    flex: 1 1 auto
    padding: 30px 20px 190px 20px
    border-radius: 20px 20px 0 0
    position: relative
    overflow: hidden

    &:after
      content: ''
      position: absolute
      top: 25px
      left: 0
      width: 100%
      height: 100%
      background-image: linear-gradient(180deg, #FFFFFF 55.31%, rgba(255, 255, 255, 0) 90.88%)
      z-index: 4

      @media (max-width: 359px)
        top: 50px

  &__icon
    width: 50px
    margin-bottom: 30px
    display: block
    position: relative
    z-index: 5

    img
      vertical-align: top

  &__name
    font-size: 22px
    color: #000
    font-weight: 700
    line-height: 1.2
    margin-bottom: 15px
    position: relative
    z-index: 5

    @media (max-width: 767px)
      font-size: 18px

  &__text
    font-size: 18px
    color: #000
    font-weight: 400
    line-height: 1.2
    position: relative
    z-index: 5

    @media (max-width: 767px)
      font-size: 16px
      line-height: 1.4

  &__img
    border-radius: 0 0 20px 20px
    overflow: hidden
    width: 100%
    height: 260px
    margin-top: -225px
    position: relative
    z-index: 1

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover