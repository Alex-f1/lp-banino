.steps
  position: relative
  z-index: 5

  @media (min-width: 1280px)
    margin-top: -165px

  &__items
    display: flex
    margin-left: -30px

    @media (max-width: 767px)
      display: block

  &__item
    display: flex
    padding-left: 30px
    width: 33.333%

    @media (max-width: 767px)
      width: 100%
      margin-bottom: 20px

  &__body
    width: 100%
    display: flex
    flex-direction: column
    background-color: #FFF
    border-radius: 30px
    padding: 30px 30px 25px 30px

    @media (max-width: 959px)
      padding: 30px

  &__step
    font-size: 40px
    color: #FFA723
    font-family: 'Roboto', sans-serif
    font-weight: 700
    line-height: 1.1
    margin-bottom: 15px

  &__text
    font-size: 18px
    color: #000
    font-weight: 400
    line-height: 1.4
    flex: 1 1 auto

    @media (max-width: 959px)
      font-size: 16px