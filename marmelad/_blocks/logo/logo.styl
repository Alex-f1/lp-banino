.logo
  margin-right: 35px

  @media (max-width: 1279px)
    max-width: 100%
    flex: 1 1 100%
    display: flex
    justify-content: center
    margin-bottom: 30px
    margin-right: 0

  &__section
    max-width: 410px
    display: flex
    align-items: center

  &__link
    flex: 0 0 100px
    width: 100px
    max-width: 100px
    display: block

    @media (max-width: 439px)
      flex: 0 0 70px
      width: 70px
      max-width: 70px

  &__img
    img
      vertical-align: top

  &__desc
    font-size: 18px
    font-weight: 400
    line-height: 1.4
    margin-left: 30px

    @media (max-width: 767px)
      font-size: 16px
      line-height 1.2

    @media (max-width: 439px)
      margin-left: 20px