.catalog-projects
  padding-top: 40px
  padding-bottom: 40px

  @media (max-width: 767px)
    padding-top: 10px
    padding-bottom: 10px

  &__head
    color: #000
    max-width: 670px
    width: 100%
    text-align: center
    margin-left: auto
    margin-right: auto
    margin-bottom: 40px

    @media (max-width: 767px)
      margin-bottom: 25px

  &__title
    font-size: 35px
    font-weight: 700
    line-height: 1.2
    margin-bottom: 20px

    @media (max-width: 767px)
      font-size: 22px
      margin-bottom: 15px

  &__desc
    font-size: 22px
    font-weight: 400
    line-height: 1.3

    @media (max-width: 767px)
      font-size: 18px

  &__toggle-buttons
    display: flex
    justify-content: space-between
    margin-bottom: 35px

    @media (max-width: 767px)
      display: block

  &__toggle-button
    width: 25%
    margin-right: 30px

    @media (max-width: 1279px)
      margin-right: 10px
      padding-right: 10px
      padding-left: 10px

    @media (max-width: 959px)
      font-size: 16px

    @media (max-width: 767px)
      width: 100%
      margin-bottom: 20px

    &:last-child
      margin-right: 0
      margin-bottom: 0

  &__container
    height: 0
    visibility: hidden
    opacity: 0
    transition: opacity 0.3s, ease 0.3s

    &._is-active-show-preview
      height: auto
      visibility: visible
      opacity: 1

    .swiper-wrapper
      @media (max-width: 959px)
        padding-bottom: 65px

    .swiper-pagination
      @media (min-width: 960px)
        display: none !important

  &__items
    @media (min-width: 960px)
      margin-left: -30px

  &__item
    width: 34.2%
    display: flex
    height: auto

    @media (min-width: 960px)
      padding-left: 30px

  &__body
    color: #000
    padding: 30px
    background-color: #FFF
    border-radius: 30px
    display: flex
    flex-direction: column

  &__img
    border-radius: 20px
    overflow: hidden
    margin-bottom: 30px

    @media (max-width: 767px)
      height: 320px
      margin-bottom: 20px

    @media (max-width: 639px)
      height: 260px

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

  &__content
    flex: 1 1 auto

  &__name
    font-weight: 700
    font-size: 22px
    line-height: 1.2
    margin-bottom: 15px

    @media (max-width: 767px)
      font-size: 18px

  &__text
    font-size: 18px
    font-weight: 400
    line-height: 1.3
    margin-bottom: 30px

    @media (max-width: 767px)
      font-size: 16px
      margin-bottom: 20px

  &__button
    width: 100%