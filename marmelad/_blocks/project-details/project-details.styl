.project-details
  &__section
    padding-top: 80px
    padding-bottom: 40px
    background-image: url('../img/project-details-bg.png')
    background-repeat: no-repeat
    background-position: 50% 50%
    background-size: cover

    @media (max-width: 767px)
      padding-top: 40px
      padding-bottom: 20px

  &__head
    color: #000
    max-width: 1025px
    width: 100%
    text-align: center
    margin-left: auto
    margin-right: auto
    margin-bottom: 40px

    @media (max-width: 767px)
      margin-bottom: 25px

  &__title
    font-size: 35px
    font-weight: 700
    line-height: 1.2
    margin-bottom: 20px

    @media (max-width: 767px)
      font-size: 22px
      margin-bottom: 15px

  &__desc
    font-size: 22px
    font-weight: 400
    line-height: 1.3
    width: 100%
    margin-left: auto
    margin-right: auto

    @media (max-width: 767px)
      font-size: 18px

  &__schema
    position: relative

    @media (max-width: 1279px)
      width: 330px
      margin-left: auto
      margin-right: auto
      margin-bottom: 30px

    @media (max-width: 359px)
      right: 30px

  &__img
    position: relative
    z-index: 1
    text-align: center

    img
      vertical-align: top

  &__points
    position: absolute
    top: 0
    left: 0
    z-index: 3
    width: 100%
    height: 100%

    & ^[0]
      &__text
        @media (min-width: 1280px)
          width: 420px
          padding: 30px 40px
          background-color: #fff
          border-radius: 30px
          z-index: 5
          position: absolute
          opacity: 0
          visibility: hidden
          transition: opacity 0.3s, ease 0.3s

          &._is-active-show
            opacity: 1
            visibility: visible

          &:after
            content: ''
            position: absolute
            bottom: -15px
            left: 50%
            transform: translateX(-50%)
            width: 0
            height: 0
            border-style: solid
            border-width: 15px 16.5px 0 16.5px
            border-color: #fff transparent transparent transparent

        @media (max-width: 1279px)
          display: none

    .t1
      top: 125px
      right: 147px

    .t2
      top: 70px
      left: 163px

    .t3
      top: 80px
      right: 317px

    .t4
