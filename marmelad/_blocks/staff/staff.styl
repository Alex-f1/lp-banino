.staff
  &__inner
    max-width: 1265px + 20px + 20px
    margin-left: auto
    margin-right: auto
    padding-right: 20px
    padding-left: 20px

  &__head
    max-width: 1010px
    width: 100%
    text-align: center
    margin: 0 auto 55px

    @media (max-width: 639px)
      margin-bottom: 20px

  &__title
    font-size: 35px
    color: #000
    font-weight: 700
    line-height: 1.2
    margin-bottom: 20px

    @media (max-width: 639px)
      font-size: 22px
      margin-bottom: 15px

  &__desc
    font-size: 22px
    font-weight: 400
    line-height: 1.3
    max-width: 800px
    width: 100%
    margin-left: auto
    margin-right: auto

    @media (max-width: 767px)
      font-size: 18px

  &__container
    max-width: 1170px + 30px + 30px
    width: 100%
    padding-right: 30px
    padding-left: 30px
    padding-bottom: 50px

    @media (max-width: 767px)
      max-width: 100%
      padding-right: 0
      padding-left: 0

    .swiper-button-prev, .swiper-button-next
      margin-top: -100px

      @media (max-width: 767px)
        display: none

    .swiper-button-prev
      width: 17px
      left: 0

      &:after
        content: ''
        width: 17px
        height: 27px
        background-image: url("data:image/svg+xml,%3Csvg width='17' height='27' viewBox='0 0 17 27' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M16.1207 4.95092C17.2931 3.81992 17.2931 1.97926 16.1207 0.848253C14.9483 -0.282754 13.0402 -0.282754 11.8678 0.848253L0.87931 11.4487C-0.293104 12.5797 -0.293104 14.4203 0.87931 15.5513L11.8678 26.1517C13.0402 27.2828 14.9483 27.2828 16.1207 26.1517C17.2931 25.0207 17.2931 23.1801 16.1207 22.0491L7.25862 13.5L16.1207 4.95092Z' fill='%23FFA723'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-size: cover

    .swiper-button-next
      width: 17px
      right: 0

      &:after
        content: ''
        transform: rotate(-180deg)
        width: 17px
        height: 27px
        background-image: url("data:image/svg+xml,%3Csvg width='17' height='27' viewBox='0 0 17 27' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M16.1207 4.95092C17.2931 3.81992 17.2931 1.97926 16.1207 0.848253C14.9483 -0.282754 13.0402 -0.282754 11.8678 0.848253L0.87931 11.4487C-0.293104 12.5797 -0.293104 14.4203 0.87931 15.5513L11.8678 26.1517C13.0402 27.2828 14.9483 27.2828 16.1207 26.1517C17.2931 25.0207 17.2931 23.1801 16.1207 22.0491L7.25862 13.5L16.1207 4.95092Z' fill='%23FFA723'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat

    .swiper-pagination
      @media (min-width: 768px)
        display: none

  &__item
    height: auto
    display: flex

  &__body
    width: 100%
    display: flex
    flex-direction: column

  &__content
    background-color: #C4C4C4
    border-radius: 30px
    overflow: hidden
    position: relative
    height: auto
    display: flex
    flex-direction: column
    margin-bottom: 30px

    @media (max-width: 767px)
      margin-bottom: 20px

  &__img
    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover

  &__text
    font-size: 18px
    color: #000
    font-weight: 400
    line-height: 1.4
    position: absolute
    flex: 1 1 auto
    bottom: 10px
    left: 0
    padding: 20px
    background-color: #FFFFFF
    border-radius: 20px
    margin-left: 10px
    margin-right: 10px
    min-height: 170px

    @media (max-width: 479px)
      font-size: 16px

    @media (max-width: 359px)
      padding: 10px
      min-height: 130px

  &__info
    color: #000
    text-align: center

  &__name
    font-size: 22px
    font-weight: 700
    line-height: 1.1
    margin-bottom: 5px

    @media (max-width: 479px)
      font-size: 18px

  &__position
    font-size: 18px
    font-weight: 400
    line-height: 1.1

    @media (max-width: 479px)
      font-size: 16px