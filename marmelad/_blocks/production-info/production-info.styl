.production-info
  padding-top: 70px

  @media (max-width: 767px)
    padding-top: 30px

  &__head
    color: #000
    max-width: 1115px
    width: 100%
    text-align: center
    margin-left: auto
    margin-right: auto
    margin-bottom: 50px

    @media (max-width: 767px)
      margin-bottom: 25px

  &__title
    font-size: 35px
    font-weight: 700
    line-height: 1.2
    margin-bottom: 20px

    @media (max-width: 767px)
      font-size: 22px
      margin-bottom: 15px

  &__desc
    font-size: 22px
    font-weight: 400
    line-height: 1.3
    margin-left: auto
    margin-right: auto

    @media (max-width: 767px)
      font-size: 18px

  &__items
    display: flex
    margin-left: -30px

    @media (max-width: 959px)
      display: block

  &__item
    width: 33.333%
    display: flex
    padding-left: 30px

    @media (max-width: 959px)
      max-width: 370px
      width: 100%
      margin-bottom: 20px
      margin-right: auto
      margin-left: auto

    &:nth-child(1)
      & ^[0]
        &__body
          color: #fff
          background-color: #1F1F1F

    &:nth-child(2)
      & ^[0]
        &__body
          color: #000
          background-color: #FFA723

    &:nth-child(3)
      & ^[0]
        &__body
          color: #000
          background-color: #F3EEE7

    &:last-child
      margin-bottom: 0

  &__body
    width: 100%
    padding: 150px 50px 30px 30px
    border-radius: 30px
    background-repeat: no-repeat
    background-position: 100% 0